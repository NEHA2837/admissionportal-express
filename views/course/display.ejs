<%- include('../header.ejs') %>
    <br><br>


    <h1 class="mt-5">course Display</h1>

    <% if(msg.length>0){%>
        <div class="alert alert-success"><%= msg%></div>

    <%} %>

    <table class="table text-center">
        <tr>
            <th>id</th>
            <th>name</th>
            <th>Email</th>
            <th>phone</th>
            <th>status</th>
            <th>action</th>
        </tr>
        <%d.forEach((item)=>{ %>
            <tr>
                <td>
                    <%=item._id%>
                </td>
                <td>
                    <%=item.name%>
                </td>
                <td>
                    <%=item.email%>
                </td>
                <td>
                    <%=item.phone%>
                </td>
                <td class="table-info">
                    <%=item.status%>
                </td>
               
                <td>
                    <a href="/course_view/<%= item._id %> "> <i class="fa-solid fa-eye"></i></a> 
                        <a href="/course_edit/<%= item._id %>"> <i class="fa-solid fa-pen-to-square"></i></a>
                    <!-- <a href="/course_delete/<%= item._id %>" class="btn btn-danger">delete</a> -->
                </td>
            </tr>
            <%}) %>

    </table>

    <center><a class="btn btn-info" href="/dashboard">back to home....</a></center>

    <%- include('../footer.ejs') %>