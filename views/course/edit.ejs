<%- include('../header.ejs') %>
    <br><br>
    <h1 class="mt-5">course Edit</h1>

    <div class="container">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <form action="/course_update/<%= d._id %>" method="post">
                    <div class="mb-3">
                        <label>name</label>
                        <input type="text" name="name" value="<%= d.name%>" class="form-control">

                    </div>
                    <div class="mb-3">
                        <label>email</label>
                        <input type="text" name="email" value="<%= d.email%>" class="form-control">

                    </div>
                    <div class="mb-3">
                        <label>phone no</label>
                        <input type="number" name="phone" value="<%= d.phone%>" class="form-control">

                    </div>
                    <div class="mb-3">
                        <label>D.O.B</label>
                        <input type="date" name="dob" value="<%= d.dob%>" class="form-control">

                    </div>
                    <div class="mb-3">
                        <label>address</label>
                        <textarea class="form-control" name="address">
                          <%= d.address%>
                        </textarea>
                    </div>
                    <div class="mb-3">
                        <label>gender</label>
                        <input type="radio" value="male" name="gender">male
                        <input type="radio" value="female" name="gender">female


                    </div>
                    <div class="mb-3">
                        <label>education</label>
                        <select class="form-control" name="education">
                            <option>select college</option>
                            <option value="10th">10th</option>
                            <option value="12th">12th</option>



                        </select>


                    </div>
                    <div class="mb-3">
                        <label>course</label>
                        <input type="text" name="course" value="btech" readonly class="form-control">

                    </div>
                    <button type="submit " class="btn btn-success">update</button>



                </form>
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>




    <%- include('../footer.ejs') %>